{
    "name": "react-certification-2020",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "env NODE_ENV=development webpack-dev-server --open",
        "build": "env NODE_ENV=production webpack",
        "build:icons": "node ./scripts/generate-icons.js && npm run prettier:fix",
        "serve": "npm run build && npx serve ./build",
        "lint": "npm run lint:js && npm run lint:css",
        "lint:js": "eslint . --ext js",
        "lint:fix": "npm run lint:js -- --fix",
        "lint:css": "stylelint \"**/*.js\"",
        "prettier": "prettier \"**/*.{js,json}\" --check",
        "prettier:fix": "npm run prettier -- --write",
        "test:unit": "jest"
    },
    "dependencies": {
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^10.4.9",
        "@testing-library/user-event": "^12.1.3",
        "bcryptjs": "^2.4.3",
        "config": "^3.3.2",
        "dotenv": "^8.2.0",
        "nanoid": "^3.1.12",
        "polished": "^3.6.7",
        "prop-types": "^15.7.2",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-router": "^5.2.0",
        "react-router-dom": "^5.2.0",
        "react-scripts": "3.4.3",
        "styled-components": "^5.2.0",
        "styled-normalize": "^8.0.7"
    },
    "devDependencies": {
        "@babel/core": "^7.11.6",
        "@babel/preset-env": "^7.11.5",
        "@babel/preset-react": "^7.10.4",
        "babel-jest": "^26.3.0",
        "babel-loader": "^8.1.0",
        "babel-plugin-styled-components": "^1.11.1",
        "clean-webpack-plugin": "^3.0.0",
        "copy-webpack-plugin": "^6.1.1",
        "enzyme": "^3.11.0",
        "enzyme-adapter-react-16": "^1.15.5",
        "enzyme-to-json": "^3.5.0",
        "eslint": "^7.9.0",
        "eslint-config-airbnb": "^18.2.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-import-resolver-webpack": "^0.12.2",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-jest": "^24.0.2",
        "eslint-plugin-jsx-a11y": "^6.3.1",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.20.6",
        "eslint-plugin-react-hooks": "^4.1.0",
        "eva-icons": "^1.1.3",
        "html-webpack-plugin": "^4.5.0",
        "husky": "^4.2.5",
        "jest": "^26.4.2",
        "jest-styled-components": "^7.0.3",
        "lint-staged": "^10.2.13",
        "prettier": "^2.1.1",
        "stylelint": "^13.7.2",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-config-styled-components": "^0.1.1",
        "stylelint-custom-processor-loader": "^0.6.0",
        "stylelint-processor-styled-components": "^1.10.0",
        "svg-to-jsx": "^1.0.2",
        "svgo": "^1.3.2",
        "webpack": "^4.44.2",
        "webpack-cli": "^3.3.12",
        "webpack-dev-server": "^3.11.0"
    },
    "lint-staged": {
        "*.{js, jsx, css, json}": [
            "npm run prettier:fix",
            "npm run lint",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
